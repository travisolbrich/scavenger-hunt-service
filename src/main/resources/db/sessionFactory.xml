<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="connection.url">jdbc:mysql://localhost:3306/scavenger_hunt</property>
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
    <mapping class="com.travisolbrich.scavenger.hunt.entity.TeamEntity"/>
    <mapping class="com.travisolbrich.scavenger.hunt.entity.UserEntity"/>
    <mapping class="com.travisolbrich.scavenger.hunt.entity.ClueEntity"/>
    <mapping class="com.travisolbrich.scavenger.hunt.entity.CheckpointEntity"/>
    <mapping class="com.travisolbrich.scavenger.hunt.entity.CodeTagEntity"/>
    <mapping class="com.travisolbrich.scavenger.hunt.entity.TaskEntity"/>
    <mapping class="com.travisolbrich.scavenger.hunt.entity.UnlockedClueEntity"/>
    <mapping class="com.travisolbrich.scavenger.hunt.entity.UnlockedTaskEntity"/>
    <!-- DB schema will be updated if needed -->
    <!-- <property name="hbm2ddl.auto">update</property> -->
  </session-factory>
</hibernate-configuration>